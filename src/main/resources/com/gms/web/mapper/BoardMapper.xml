<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gms.web.mapper.BoardMapper">
   <resultMap id="resultMap" type="com.gms.web.command.ResultMap">
   		<id property="articleSeq" column="article_seq"/>
   		<result property="id" column="id"/>
   		<result property="title" column="title"/>
   		<result property="content" column="content"/>
   		<result property="regdate" column="regdate"/>
   		<result property="hitCount" column="hitcount"/>
   		<result property="count" column="count"/>
   </resultMap>
     <resultMap id="article" type="com.gms.web.board.Article">
   		<id property="articleSeq" column="article_seq"/>
   		<result property="id" column="member_id"/>
   		<result property="title" column="title"/>
   		<result property="content" column="content"/>
   		<result property="regdate" column="regdate"/>
   		<result property="hitCount" column="hitcount"/>
   </resultMap>
   
   <select id="selectSome" resultMap="article" parameterType="com.gms.web.command.Command">
       select * from board
   </select>
     <select id="countArticles" resultMap="resultMap" parameterType="com.gms.web.command.Command">
       select count(*) as count from Board
   </select>

<insert id="insert"
      parameterType="com.gms.web.command.Command">
</insert>

<select id="selectOne" 
    resultMap="article"
    parameterType="com.gms.web.command.Command">
    select * from Board where article_seq like #{search}
</select>
<update id="updateArticle" 
   parameterType="com.gms.web.command.Command">
   update Board set title = #{dir} , content = #{column} where article_seq = #{search}
</update>
<delete id="delete"
    parameterType="com.gms.web.command.Command">
</delete>
</mapper>